{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/v2/application/utils/*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["__tests__"]
}
